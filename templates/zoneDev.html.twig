{% block title %}Zone Dev{% endblock %}

{% block body %}
<fieldset>
    <legend>Upload PDF</legend>
{{ form_start(formView) }}

 <input class="btn btn-primary" type="submit" value="Upload Image" name="submit">
 
{{ form_end(formView) }}
</fieldset>
 <fieldset>
    <legend> Upload JPG </fieldset>
       <div class="preview" >
        <img id="file-ip-1-preview" style="width:200px; height:200px;">
    </div>
    <form action="{{ path('upload') }}" method="post" enctype="multipart/form-data">
        Select image to upload:
        <input type="file" name="fileToUpload" id="fileToUpload" onchange="showPreview(event);">
    </form>
</fieldset>
 
{% endblock %}
